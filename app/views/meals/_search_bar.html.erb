<div class="d-flex justify-content-center">
  <%= form_with url: meals_path, method: :get, class: "d-flex py-5 col-8" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control rounded-pill",
      placeholder: "Find your meal by name, ingredient or category"
    %>
    <%= submit_tag "Find a meal", class:"btn-search" %>
  <% end %>
</div>
