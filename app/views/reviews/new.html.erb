
<div class="container my-5 w-50">


<h2>Review your booking</h2>

<div class="container" data-controller="form-submit">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for([@booking, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: { controller: "star-rating", form_submit_target: "form", action: "click->form-submit#submit"} }  %>
        <%= f.submit "Submit Review", class: "btn-submit" %>
      <% end %>
    </div>
  </div>
</div>

</div>
